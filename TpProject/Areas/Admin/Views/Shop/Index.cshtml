@model IEnumerable<TpProject.Models.ViewModels.Shop.CategoryVM>

@{
    ViewBag.Title = "Categories";
}

<h2>Categories</h2>

<p>
    @Html.ActionLink("Add new category", "AddNewCategory")
</p>

@if (!Model.Any()) {
    <h1 class="text-center">There are no categories.</h1>
} else {
    <table class="table sorting" id="pages">
        <tr class="home">
            
            <th></th>
        </tr>

        @foreach (var item in Model) {
            <tr id="id_@item.Id">
                <td>
                    @Html.EditorFor(modelItem => item.Name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "delete" })
                </td>
            </tr>
        }

    </table>
}

@section Scripts {
    <script src="https://code.jquery.com/ui/1.12.0/jquery-ui.min.js"
            integrity="sha256-eGE6blurk5sHj+rmkfsGYeKyZx3M4bG+ZlFyA7Kns7E="
            crossorigin="anonymous"></script>

    <script>
        $(function () {

            $("table#pages tbody").sortable({
                items: "tr:not(.home)",
                placeholder: "ui-state-highlight",
                update: function () {
                    var ids = $("table#pages tbody").sortable();
                    var url = "/Admin/Shop/ReorderCategories";

                    $.post(url, ids, function (data) {

                    });
                }
            });

            $("a.delete").click(function () {
                if (!confirm("Confirm page deletion")) {
                    return false;
                }
            });
        });
    </script>
}